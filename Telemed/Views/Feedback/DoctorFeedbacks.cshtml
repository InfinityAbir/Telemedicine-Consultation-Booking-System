@model IEnumerable<Telemed.Models.Feedback>
@{
    ViewData["Title"] = "Patient Feedbacks";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Patient Feedbacks</h2>
        <p class="text-muted">See what your patients think about their appointments.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-chat-left-dots fs-1 text-secondary"></i>
            <p class="mt-3 text-muted">No feedback received yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 feedback-card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="https://cdn-icons-png.flaticon.com/512/2922/2922510.png" alt="Patient"
                                     class="rounded-circle me-3" width="50" height="50">
                                <div>
                                    <h5 class="mb-0 fw-semibold">@item.Patient?.User?.FullName</h5>
                                    <small class="text-muted">Patient</small>
                                </div>
                            </div>

                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= item.Rating)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                }
                            </div>

                            <p class="text-secondary mb-2">@item.Comment</p>

                            <small class="text-muted">
                                @item.CreatedAt.ToString("MMM dd, yyyy")
                                @if (item.UpdatedAt.HasValue)
                                {
                                    <span>(edited)</span>
                                }
                            </small>

                            <hr class="mt-3 mb-2" />

                            <div class="d-flex justify-content-between">
                                <small class="text-muted">Appointment ID: @item.AppointmentId</small>
                                <small class="text-primary fw-semibold">⭐ @item.Rating / 5</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <style>
        .feedback-card {
            background: #fff;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .feedback-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            }

        .card-body {
            position: relative;
        }

        .text-primary {
            color: #007bff !important;
        }

        .fw-semibold {
            font-weight: 600;
        }
    </style>
}
