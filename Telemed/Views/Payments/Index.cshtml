@model IEnumerable<Telemed.Models.Payment>

@{
    ViewData["Title"] = "Payments";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    bool isPatient = User.IsInRole("Patient");
    bool isAdmin = User.IsInRole("Admin");
    bool isDoctor = User.IsInRole("Doctor");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-primary fw-bold">Payments</h1>
            <small class="text-muted">Recent payments and actions</small>
        </div>

        <div class="d-flex gap-2 align-items-center">
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input id="searchInput" class="form-control" placeholder="Search doctor, patient or appointment #" />
            </div>

            <select id="statusFilter" class="form-select" style="width:160px;">
                <option value="all">All statuses</option>
                <option value="paid">Paid</option>
                <option value="pending">Pending</option>
            </select>
        </div>
    </div>

    @if (!Model?.Any() ?? true)
    {
        <div class="alert alert-info text-center rounded-4 shadow-sm">
            No payments found.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var appointment = item.Appointment;
                var docName = appointment?.Doctor?.User?.FullName ?? "—";
                var patName = appointment?.Patient?.User?.FullName ?? "—";
                var statusKey = (item.Status == Telemed.Models.PaymentStatus.Paid) ? "paid" : "pending";

                // ScheduledAt is non-nullable DateTime in your model; handle when appointment is null.
                var scheduled = appointment != null
                ? appointment.ScheduledAt.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt")
                : "-";

                <div class="col-sm-6 col-lg-4 payment-card" data-search="@($"{docName} {patName} {appointment?.AppointmentId}")" data-status="@statusKey">
                    <div class="card h-100 shadow-sm rounded-4 border-0">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="mb-0">Appointment #@appointment?.AppointmentId</h5>
                                @if (item.Status == Telemed.Models.PaymentStatus.Paid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </div>

                            <p class="mb-1 text-muted small"><strong>Doctor:</strong> <span class="fw-semibold">@docName</span></p>
                            <p class="mb-1 text-muted small"><strong>Patient:</strong> <span class="fw-semibold">@patName</span></p>
                            <p class="mb-1 text-muted small"><strong>When:</strong> @scheduled</p>

                            <div class="mt-3">
                                <div class="h5 mb-0 fw-bold">৳@item.Amount.ToString("0.00")</div>
                                <div class="text-muted small">
                                    Payment date:
                                    @(item.PaymentDate.HasValue? item.PaymentDate.Value.ToLocalTime().ToString("dd MMM yyyy, hh:mm tt") : "-")
                                </div>
                            </div>

                            <div class="mt-3 d-flex gap-2 align-items-center">

                                @* PATIENT: Pay Now if pending *@
                                @if (isPatient
                                                        && item.Status != Telemed.Models.PaymentStatus.Paid
                                                        && appointment?.Patient?.UserId == currentUserId)
                                {
                                    <form asp-action="StartPayment" method="get" class="d-inline-flex w-100">
                                        <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                        <button type="submit" class="btn btn-primary btn-sm w-100 d-flex align-items-center justify-content-center">
                                            <i class="bi bi-credit-card me-2"></i> Pay Now
                                        </button>
                                    </form>
                                }
                                @* PATIENT: View button when not paying *@
                                else if (isPatient && appointment != null)
                                {
                                    <a asp-action="StartPayment"
                                       asp-route-appointmentId="@appointment.AppointmentId"
                                       class="btn btn-outline-primary btn-sm d-flex align-items-center gap-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const cards = Array.from(document.querySelectorAll('.payment-card'));

            function applyFilters() {
                const q = (searchInput?.value || '').trim().toLowerCase();
                const status = statusFilter?.value || 'all';

                cards.forEach(card => {
                    const text = (card.dataset.search || '').toLowerCase();
                    const cardStatus = card.dataset.status || 'pending';

                    const matchesSearch = !q || text.includes(q);
                    const matchesStatus = status === 'all' || status === cardStatus;

                    card.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
                });
            }

            if (searchInput) searchInput.addEventListener('input', applyFilters);
            if (statusFilter) statusFilter.addEventListener('change', applyFilters);
        })();
    </script>
}
